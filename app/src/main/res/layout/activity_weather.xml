<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background"
    tools:context=".WeatherActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:alpha="0.4"
        android:contentDescription="图片"
        android:onClick="onImageViewClick"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconsback1"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="35dp" />


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"

        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="海淀区"
            android:textColor="@color/white"
            android:textSize="40dp"></TextView>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="31\u00B0"
            android:textColor="@color/white"
            android:textSize="100dp"></TextView>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="大部晴朗"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="最高35\u00B0 最低23\u00B0"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout1">

        <FrameLayout
            android:id="@+id/ll2_fl1"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <ImageView
                android:id="@+id/ll_fl_img1"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/iconswarning2"

                ></ImageView>

            <TextView
                android:id="@+id/ll_fl_tv1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="serif"
                android:text=" 高温"
                android:textColor="@color/white"
                android:textSize="24dp"></TextView>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="14dp"
            android:alpha="0.8"
            android:fontFamily="serif"
            android:text="高温，7月9日，星期天21:35结束"
            android:textColor="@color/white"
            android:textSize="16dp"

            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:alpha="0.5"
            android:fontFamily="serif"
            android:text="国家预警发布"
            android:textColor="@color/white"
            android:textSize="14sp"

            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout2">

        <FrameLayout
            android:id="@+id/ll3_fl1"
            android:layout_width="match_parent"
            android:layout_height="22dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:alpha="0.2"
                android:src="@drawable/iconscube1"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="30dp"
                android:alpha="0.8"
                android:fontFamily="serif"
                android:text="空气质量"
                android:textColor="@color/white"
                android:textSize="16sp"></TextView>

        </FrameLayout>

        <TextView
            android:id="@+id/ll3_tv2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="57-良"
            android:textColor="@color/white"
            android:textSize="26sp"></TextView>

        <TextView
            android:id="@+id/ll3_tv3"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:alpha="0.8"
            android:fontFamily="serif"
            android:text="当前AQI(CN)为57"
            android:textColor="@color/white"
            android:textSize="14sp"></TextView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradient_line"></TextView>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="80dp"

                android:src="@drawable/button1_whitedemo"></ImageView>

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout3">

        <FrameLayout
            android:id="@+id/ll4_fl1d"
            android:layout_width="match_parent"
            android:layout_height="22dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:alpha="0.6"
                android:src="@drawable/clock1"></ImageView>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:alpha="0.7"
                android:fontFamily="serif"
                android:text="每小时天气预报"
                android:textColor="@color/white"

                ></TextView>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weatherrecyclerview1"
            android:layout_width="match_parent"
            android:layout_height="110dp">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>